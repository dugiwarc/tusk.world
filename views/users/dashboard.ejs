<% include ../partials/header %>
<script> const req_array = [];
<% requests.forEach(function(request){ %>
    req_array.push(<%- JSON.stringify(request) %>);
<% }) %>
</script>
<div id="dashboard">
<div id="dashboard_sidebar">
    <div class="sidebar_tab">
        Enquiries
    </div>
    <div class="sidebar_tab">
        Requests
    </div>
</div>
<div id="dashboard_preview">s</div>
<div id="dashboard_screen">c</div>
</div>


<script>
var count = 0, a, b;
$('.sidebar_tab').click(function(){
    if($("#dashboard_preview").hasClass('moving')){
        console.log("es");
    } else {
        count = 0;
    }
    $('#dashboard_preview').empty();
    if($(this).text().trim() === 'Enquiries')
    {
        for(var i = 0; i < req_array.length; i++)
        {
            $('#dashboard_preview').append(`<h5>${req_array[i].author}</h1>`);
        }
    } else {
        // do smth else;
    }
    count++;
    if(count === 1)
    {
        a = $(this).text().trim();
        $('#dashboard_preview').toggleClass('moving');
    }
    if(count === 2)
    {
        b = $(this).text().trim();
        if(a===b)
        {
            $('#dashboard_preview').toggleClass('moving');
            count = 0;
        }
        else
        {
            count = 0;
        }
    }
});

</script>
