<% include ../partials/header %>

<h1>Edit <% user.name %>'s Profile</h1>
<a href="/">I changed my mind</a>
<form action="/users/<%= user._id %>?_method=PUT" method="post" enctype="multipart/form-data">
  <input type="text" name="user[name]"  value="<%= user.name %>">
  <input type="text" name="user[surname]" value="<%= user.surname %>">
  <input type="text" name="user[username]" value="<%= user.username %>">
  <input type="text" name="user[city]" value="<%= user.city %>" placeholder="add a city where you live">
  <input type="file" id="image" name="image" accept="image/*">
  <button>Submit</button>
</form>



<form id="upload_form" action="/users/<%= user._id %>/validation?_method=PUT" method="post" enctype="multipart/form-data">
  <input type="file" name="validation_paper" id="validation_paper" onchange="uploadFile()" accept="image/*"><br>
  <progress id="progressBar" value="0" max="100" style="width:300px;"></progress>
  <h3 id="status"></h3>
  <p id="loaded_n_total"></p>
</form>


<script>
  function _(el) {
    return document.getElementById(el);
  }

  function uploadFile() {
    var file = document.getElementById('validation_paper').files[0];

    // alert(file.name+" | "+file.size+" | "+file.type);
    var formdata = new FormData();
    formdata.append("validation_paper", file);
    var ajax = new XMLHttpRequest();
    ajax.upload.addEventListener("progress", progressHandler, false);
    ajax.addEventListener("load", completeHandler, false);
    ajax.addEventListener("error", errorHandler, false);
    ajax.addEventListener("abort", abortHandler, false);
    ajax.open("POST", "/users/<%= user._id %>/validation?_method=PUT"); 
    ajax.send(formdata);
  }

  function progressHandler(event) {
    _("loaded_n_total").innerHTML = "Uploaded " + event.loaded + " bytes of " + event.total;
    var percent = (event.loaded / event.total) * 100;
    _("progressBar").value = Math.round(percent);
    _("status").innerHTML = Math.round(percent) + "% uploaded... please wait";
  }

  function completeHandler(event) {
    _("status").innerHTML = event.target.responseText;
    _("progressBar").value = 0; //wil clear progress bar after successful upload
    alert("File has been ..");
  }

  function errorHandler(event) {
    _("status").innerHTML = "Upload Failed";
  }

  function abortHandler(event) {
    _("status").innerHTML = "Upload Aborted";
  }
</script>

<% include ../partials/footer %>
